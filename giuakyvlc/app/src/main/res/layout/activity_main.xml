<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/item_btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:onClick="themmoi_click"
        android:text="them hoa moi"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold" />

    <Button
        android:id="@+id/item_btn_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_btn_add"
        android:layout_alignStart="@+id/item_btn_add"
        android:layout_below="@+id/item_btn_add"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_bright"
        android:onClick="show_click"
        android:text="Liet ke danh sach hoa"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/list_view_hoa"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>


    </LinearLayout>

</RelativeLayout>
